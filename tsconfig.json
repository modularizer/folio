{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/user/*": ["./user/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "user/**/*.ts",
    "user/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}

